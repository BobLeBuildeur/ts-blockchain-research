{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "docs": "npm run docs:api & npm run docs:uml",
    "docs:api": "npx apidoc -i src -o docs/api",
    "docs:uml": "npx tsuml2 --glob \"./src/**/*.ts\" -o ./docs/UML.svg",
    "test": "ts-mocha -p ./tsconfig.json ./src/{,**/*}.spec.ts",
    "test:coverage": "nyc npm test",
    "test:current": "ts-mocha --grep @current -p ./tsconfig.json ./src/{,**/*}.spec.ts",
    "test:unit": "ts-mocha --grep @unit -p ./tsconfig.json ./src/{,**/*}.spec.ts",
    "test:integration": "ts-mocha --grep @integration -p ./tsconfig.json ./src/{,**/*}.spec.ts",
    "test:e2e": "ts-mocha --grep @e2e -p ./tsconfig.json ./src/{,**/*}.spec.ts",
    "report": "npm run report:lint & npm run report:count-lines & report:liscences",
    "report:count-lines": "npx cloc src | tee ./reports/lines.txt",
    "report:lint": "eslint . --ext .ts | tee ./reports/lint.txt",
    "report:liscences": "npx license-checker --csv --out ./docs/liscences.csv"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/axios": "^0.14.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.6",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "axios": "^0.27.2",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "tslog": "^3.3.4"
  }
}
